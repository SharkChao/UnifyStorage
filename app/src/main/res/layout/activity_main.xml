<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <Button
        android:id="@+id/btnInsert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="插入"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/btnFindAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="findAll"
        app:layout_constraintLeft_toRightOf="@id/btnInsert"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <Button
        android:id="@+id/btnFindUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="findUser"
        app:layout_constraintLeft_toRightOf="@id/btnInsert"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/btnFindAll"
        />

    <Button
        android:id="@+id/btnFindUserByIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="findUserByIn"
        app:layout_constraintLeft_toRightOf="@id/btnInsert"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/btnFindUser"
        />

    <Button
        android:id="@+id/btnFindUserByContains"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="findUserByContains"
        app:layout_constraintLeft_toRightOf="@id/btnInsert"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/btnFindUserByIn"
        />

    <Button
        android:id="@+id/btnFindUserByLike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="findUserByLike"
        app:layout_constraintLeft_toRightOf="@id/btnInsert"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/btnFindUserByContains"
        />

    <Button
        android:id="@+id/btnFindUserByNotNull"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="findUserByNotNull"
        app:layout_constraintLeft_toRightOf="@id/btnInsert"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/btnFindUserByLike"
        />

</android.support.constraint.ConstraintLayout>